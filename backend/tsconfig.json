{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "./src",
        "outDir": "./dist",
    
            "types": ["node"],
            "typeRoots": ["./node_modules/@types", "./node_modules"],
        
            "esModuleInterop": true,    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
